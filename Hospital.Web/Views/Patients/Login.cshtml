@model Hospital.Models.ViewModels.PatientLoginViewModel

@{
    ViewBag.Title = "Bejelentkezés";
}

<div class="card mx-auto" style="width: 30vw">
    <div class="card-body">
        <h5 class="card-title">Bejelentkezés</h5>

        <form asp-controller="Patients" asp-action="Login">
            <div class="failureNotification">@ViewBag.Information</div>
            <div asp-validation-summary="ModelOnly" class="failureNotification"></div>

            <div class="form-group">
                @Html.LabelFor(vm => vm.UserName)
                <input class="form-control" asp-for="UserName"/>
                <span asp-validation-for="UserName"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(vm => vm.Password)
                <input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-check">
                @Html.LabelFor(vm => vm.StayLoggedIn)
                <input asp-for="StayLoggedIn" class="form-check-input">
            </div>

            <input type="submit" value="Bejelentkezés" class="btn btn-primary"/>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}